.triangles {
  position: relative;
  height: 80px;
  margin-top: -80px;
  padding: 0;
}
.triangles__item {
  display: block;
  width: 50%;
  position: absolute;
  height: 100%;
  fill: #fff;

  &--left {
    left: 0;
  }

  &--right {
    right: 0;
  }
}

.triangles-down {
  position: relative;
  height: 80px;
  margin-top: 0;
  padding: 0;
  z-index: 10;
  margin-top: 120px;
}